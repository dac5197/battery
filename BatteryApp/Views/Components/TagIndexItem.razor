<div class="badge tag-badge-index border-square m-1">
    @Tag.Name
    @if (ShowTagCounts)
    {
        <span class="badge badge-light border-square ml-1">@Count</span>
    }
</div>

<style>
    .tag-badge-index {
        color: black;
        background-color: #cce4ff;
        font-weight: normal;
        font-size: small;
    }
</style>

@code {
    [Parameter]
    public Tag Tag { get; set; }

    [Parameter]
    public int Count { get; set; }

    [Parameter]
    public bool ShowTagCounts { get; set; }
}
